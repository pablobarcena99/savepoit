<% if notice %>
  <div class="flash flash-success alert alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert" style="color: black;">
    <div>
      <%= notice %>
    </div>
    <a style="margin-left: 5px; " data-bs-dismiss="alert" aria-label="Close">
      <%= image_tag "x_icon.png", width: "20", height: "20" %>
    </a>
  </div>
<% end %>
<% if alert %>
<div class="flash flash-danger alert alert-dismissible fade show" role="alert" style="color: black;">
    <%= alert%>
    <a data-bs-dismiss="alert" aria-label="Close">
      <%= image_tag "x_icon.png", width: "20", height: "20" %>
    </a>
  </div>
<% end %>
